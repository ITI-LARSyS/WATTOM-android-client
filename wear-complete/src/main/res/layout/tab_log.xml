<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/yawacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaw acc: "/>

        <TextView
            android:id="@+id/x_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pitchacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pitch acc: "/>

        <TextView
            android:id="@+id/y_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rollacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roll acc: "/>

        <TextView
            android:id="@+id/z_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp: "/>

        <TextView
            android:id="@+id/tms_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/ConsumoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo:"/>

        <TextView
            android:id="@+id/ConsumoInsert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"/>

    </LinearLayout>

</LinearLayout>
