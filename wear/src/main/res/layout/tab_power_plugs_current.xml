<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.filipe.socketcontroller.charts.DynamicLineChart
        android:id="@+id/linechartplugs"
        app:egUseCubic="true"
        app:egUseOverlapFill="false"
        app:egCurveSmoothness="0.4"
        app:egIndicatorLineColor="#FFFFFF"
        app:egLegendHeight="30dp"
        app:egIndicatorTextColor="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/textCurSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NOTHING"
        android:onClick="handleLineChartClick"
        android:textAlignment="center"
        />

</LinearLayout>

